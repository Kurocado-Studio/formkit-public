{
  "$schema": "https://json.schemastore.org/tsconfig",
  "files": [],
  "extends": ["@kurocado-studio/qa/web/tsconfig.qa"],
  "references": [
    { "path": "domains/atelier-ui" },
    { "path": "packages/atelier-ui-react" },
    { "path": "packages/atelier-ui-vue" }
  ],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["es2021", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020",
    "verbatimModuleSyntax": true
  }
}
